<?xml version="1.0" encoding="UTF-8" ?>
<lcui-app>
  <ui>
    <widget id="picture-viewer-window" class="window skin-light-green">
      <widget class="window-navbar">
        <widget class="window-navbar-btn" id="btn-hide-picture-viewer">
          <widget type="textview" class="icon mdi mdi-arrow-left"></widget>
        </widget>
        <widget class="pull-right">
          <widget class="window-navbar-btn" id="btn-show-picture-info">
            <widget type="textview" class="icon mdi mdi-information-outline"></widget>
          </widget>
        </widget>
      </widget>
      <widget class="window-body">
        <widget id="picture-viewer-target" class="picture-container"></widget>
        <widget class="picture-option-group">
          <widget class="picture-option-btn">
            <widget id="btn-picture-reset-size" class="icon mdi mdi-fullscreen" type="textview"></widget>
          </widget>
          <widget class="picture-option-btn">
            <widget id="btn-picture-zoom-out" class="icon mdi mdi-minus" type="textview"></widget>
          </widget>
          <widget id="btn-picture-zoom-in" class="picture-option-btn">
            <widget class="icon mdi mdi-plus" type="textview"></widget>
          </widget>
        </widget>
        <widget id="picture-loading-tip">
          <widget type="textview">图片载入中...</widget>
        </widget>
      </widget>
    </widget>
  </ui>
</lcui-app>
