<?xml version="1.0" encoding="utf-8" ?>
<lcui-app>
  <ui>
    <widget id="picture-info-panel" class="panel theme-green">
      <widget class="panel-header">
        <widget type="textview-i18n" class="text panel-header-title" data-i18n-key="picture.info.title">文件信息</widget>
        <widget class="pull-right">
          <widget id="btn-hide-picture-info" class="icon-btn">
            <widget type="textview" class="icon icon icon-close"></widget>
          </widget>
        </widget>
      </widget>
      <widget class="panel-body">
        <widget id="picture-info-content-wrapper" class="panel-content-wrapper">
          <widget id="picture-info-content" class="panel-content scrolllayer">
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_name">文件名</widget>
              <widget id="picture-info-name" type="textview" class="text info-item-value"></widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_date">日期</widget>
              <widget id="picture-info-time" type="textview" class="text info-item-value"></widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_size">大小</widget>
              <widget id="picture-info-file-size" type="textview" class="text info-item-value"></widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.image_resolution">尺寸</widget>
              <widget id="picture-info-size" type="textview" class="text info-item-value"></widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.folder_path">文件夹路径</widget>
              <widget id="picture-info-path" type="textview" class="info-item-value"></widget>
              <widget id="btn-open-picture-dir" class="btn btn-link">
                <widget type="textview-i18n" class="text" data-i18n-key="picture.info.open_folder">打开文件夹</widget>
              </widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_score">评分</widget>
              <widget id="picture-info-rating" type="starrating"></widget>
            </widget>
            <widget class="info-item">
              <widget type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_tags">标签</widget>
              <widget id="picture-info-tags" class="tag-list"></widget>
              <widget id="btn-add-picture-tag" class="btn btn-link">
                <widget type="textview-i18n" class="text" data-i18n-key="picture.info.add_tags">添加标签</widget>
              </widget>
            </widget>
          </widget>
          <widget type="scrollbar" data-parent="picture-info-content-wrapper" data-layer="picture-info-content"/>
        </widget>
      </widget>
    </widget>
  </ui>
</lcui-app>
